source $(dirname $0)/../conf/minechand-env.sh

pid_path_option="--pid-path /var/run/minechand.pid"
log_path=/var/log/minechand/minechan.log

while true; do
  if [ "$1" = --pid-path ]; then
    pid_path_option="$1 $2"
    shift 2
  else
    break
  fi
done

sh $SCRIPT_DIR/minechand.sh $pid_path_option 2>> $log_path 1>&2 &
